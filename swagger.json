{
    "openapi": "3.0.0",
    "info": {
        "title": "Users Manager",
        "description": "Documentation of users manager api",
        "version": "1.0.0",
        "contact": {
            "email": "mr.werton@gmail.com"
        }
    },
    "tags": [
        {
            "name": "users",
            "description": "User manager"
        }
    ],
    "paths": {
        "/users": {
            "post": {
                "tags": [
                    "users"
                ],
                "summary": "Create new user.",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "jhon does",
                                    "email": "jhondoes@gmail.com"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User created successful.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "admin": {
                                            "type": "boolean"
                                        },
                                        "id": {
                                            "type": "string"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "created_at": {
                                            "type": "string"
                                        },
                                        "updated_at": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "admin": true,
                                        "id": "c5c739c0-4576-47a4-82f5-8b314d2eba21",
                                        "name": "jhon does",
                                        "email": "jhondoes@gmail.com",
                                        "created_at": "2022-12-16T20:32:40.759Z",
                                        "updated_at": "2022-12-16T20:32:40.759Z"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "User already exists.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": "string"
                                    },
                                    "example": {
                                        "error": "User already exists."
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "tags": [
                    "users"
                ],
                "summary": "Get all users.",
                "description": "Only admins user has access",
                "parameters": [
                    {
                        "in": "header",
                        "name": "user_id",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "admin": {
                                                "type": "boolean"
                                            },
                                            "id": {
                                                "type": "string"
                                            },
                                            "name": {
                                                "type": "string"
                                            },
                                            "email": {
                                                "type": "string"
                                            },
                                            "created_at": {
                                                "type": "string"
                                            },
                                            "updated_at": {
                                                "type": "string"
                                            }
                                        },
                                        "example": [
                                            {
                                                "admin": true,
                                                "id": "c5c739c0-4576-47a4-82f5-8b314d2eba21",
                                                "name": "jhon does",
                                                "email": "jhondoes@gmail.com",
                                                "created_at": "2022-12-16T20:32:40.759Z",
                                                "updated_at": "2022-12-15T20:32:40.759Z"
                                            }
                                        ]
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "User not found.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": "string"
                                    },
                                    "example": {
                                        "error": "Only admins can access the list."
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/{user_id}": {
            "get": {
                "tags": [
                    "users"
                ],
                "summary": "Get user.",
                "parameters": [
                    {
                        "in": "path",
                        "name": "user_id",
                        "required": true,
                        "description": "ID do usu√°rio",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "admin": {
                                            "type": "boolean"
                                        },
                                        "id": {
                                            "type": "string"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "created_at": {
                                            "type": "string"
                                        },
                                        "updated_at": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "admin": false,
                                        "id": "c5c739c0-4576-47a4-82f5-8b314d2eba21",
                                        "name": "jhon does",
                                        "email": "jhondoes@gmail.com",
                                        "created_at": "2021-03-21T20:32:40.759Z",
                                        "updated_at": "2021-03-21T20:32:40.759Z"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "User not found.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": "string"
                                    },
                                    "example": {
                                        "error": "User not found"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/{user_id}/admin": {
            "patch": {
                "tags": [
                    "users"
                ],
                "summary": "Turn user in admin.",
                "parameters": [
                    {
                        "in": "path",
                        "name": "user_id",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User turned admin successful.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "admin": {
                                            "type": "boolean"
                                        },
                                        "id": {
                                            "type": "string"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "created_at": {
                                            "type": "string"
                                        },
                                        "updated_at": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "admin": true,
                                        "id": "c5c739c0-4576-47a4-82f5-8b314d2eba21",
                                        "name": "jhon does",
                                        "email": "jhondoes@gmail.com",
                                        "created_at": "2022-12-16T20:32:40.759Z",
                                        "updated_at": "2022-12-16T20:32:40.759Z"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "User not found.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": "string"
                                    },
                                    "example": {
                                        "error": "User not found"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}